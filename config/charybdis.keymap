#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE  0
#define NUM   1
#define FUNC  2
#define EXT   3
#define GAME  4
#define MOUSE 5

&lt {
    tapping-term-ms = <200>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

&soft_off {
    hold-time-ms = <2000>; // Only turn off it the key is held for 2 seconds or longer.
};

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
            require-prior-idle-ms = <125>;
            quick-tap-ms = <200>;
        };
    };

    combos {
        compatible = "zmk,combos";

        Clear_BLE_Profile {
            bindings = <&bt BT_CLR>;
            key-positions = <0 4 40>;
        };

        space {
            bindings = <&kp SPACE>;
            key-positions = <19 20>;
        };

        enter {
            bindings = <&kp ENTER>;
            key-positions = <16 15>;
        };

        return {
            bindings = <&kp RET>;
            key-positions = <22 23>;
        };

        escape {
            bindings = <&kp ESC>;
            key-positions = <1 0>;
        };

        underline {
            bindings = <&kp UNDER>;
            key-positions = <9 8>;
        };

        dash {
            bindings = <&kp MINUS>;
            key-positions = <7 8>;
        };

        backslsh {
            bindings = <&kp BSLH>;
            key-positions = <34 35>;
        };

        reload {
            bindings = <&kp LC(R)>;
            key-positions = <4 3>;
        };

        undo {
            bindings = <&kp LC(Z)>;
            key-positions = <25 24>;
        };

        cut {
            bindings = <&kp LC(X)>;
            key-positions = <26 25>;
        };

        copy {
            bindings = <&kp LC(C)>;
            key-positions = <27 26>;
        };

        paste {
            bindings = <&kp LC(V)>;
            key-positions = <28 27>;
        };

        select_all {
            bindings = <&kp LC(A)>;
            key-positions = <13 12>;
        };

        save {
            bindings = <&kp LC(S)>;
            key-positions = <14 13>;
        };

        all_caps {
            bindings = <&kp CAPS>;
            key-positions = <15 20>;
        };

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <10 11>;
        };
    };

    macros {
        email: email {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp B &kp R &kp Y &kp A &kp N &kp AT &kp P &kp E &kp C &kp J &kp O &kp DOT &kp C &kp O &kp M>;
            wait-ms = <0>;
        };

        git_status: git_status {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp S &kp T &kp A &kp T &kp U &kp S>;
            wait-ms = <0>;
        };

        git_pull: git_pull {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp P &kp U &kp L &kp L>;
            wait-ms = <0>;
        };

        git_pull_many: git_pull_many {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(R) &kp G &kp I &kp T &kp SPACE &kp MINUS &kp LEFT_SHIFT &kp C &kp SPACE &kp LBRC &kp RBRC &kp SPACE &kp P &kp U &kp L &kp L &kp SQT>;
            wait-ms = <0>;
        };

        git_push: git_push {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp P &kp U &kp S &kp H>;
            wait-ms = <0>;
        };

        git_add: git_add {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp A &kp D &kp D &kp SPACE &kp DOT>;
            wait-ms = <0>;
        };

        git_diff: git_diff {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp D &kp I &kp F &kp F>;
            wait-ms = <0>;
        };

        git_checkout: git_checkout {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp C &kp H &kp E &kp C &kp K &kp O &kp U &kp T &kp SPACE>;
            wait-ms = <0>;
        };

        git_commit: git_commit {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp G &kp I &kp T &kp SPACE &kp C &kp O &kp M &kp M &kp I &kp T &kp SPACE &kp MINUS &kp M &kp SPACE &kp DOUBLE_QUOTES &kp DOUBLE_QUOTES &kp LEFT>;
            wait-ms = <0>;
        };

        start_dealsuite: start_dealsuite {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&kp LC(R)>,
                <&macro_wait_time 50>,
                <&kp C &kp E &kp L &kp E>,
                <&macro_wait_time 1000>,
                <&kp RET &kp N1 &kp RET>,
                <&macro_wait_time 2000>,
                <&kp LC(LS(N5)) &kp LC(R)>,
                <&macro_wait_time 50>,
                <&kp R &kp U &kp N &kp SPACE &kp D &kp RET>,
                <&macro_wait_time 2000>,
                <&kp LC(LS(N5)) &kp LC(R)>,
                <&macro_wait_time 50>,
                <&kp A &kp P &kp P &kp DOT &kp P &kp RET>,
                <&macro_wait_time 2000>,
                <&kp LC(LS(N5)) &kp LC(R)>,
                <&macro_wait_time 50>,
                <&kp R &kp U &kp N &kp S &kp E &kp RET>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            label = "BASE";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //│    Q   [esc]  W     │     E    │    R [reload]  T    │   │   Y    [ - ]  U   [ _ ]  I     │   O    [ ⌫ ]  P    │
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //│    A   [all]  S   [save]  D    │    F   [ ↵ ]   G    │   │   H   [space]  J    │    K     │   L    [ ↵ ]  '"    │
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //│    Z   [ ⭮ ]  X  [ ✂ ]   C  [copy] V  [paste]  B    │   │   N      │    M     │   ,<     │  .>    [ \ ]  /?    │
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      │    ⊞    │  🔽/↹   │  SPACE   │   │   🖯/⏎   │  🔼/⌫  │
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&kp Q        &kp W       &kp E        &kp R        &kp T      &none    &none  &kp Y      &kp U        &kp I        &kp O       &kp P
&kp A        &hm LALT S  &hm LCTRL D  &hm LSHFT F  &kp G      &none    &none  &kp H      &hm RSHFT J  &hm RCTRL K  &hm RALT L  &lt 1 SQT
&hm LSHFT Z  &kp X       &kp C        &kp V        &kp B      &none    &none  &kp N      &kp M        &kp COMMA    &kp DOT     &hm SEMI FSLH
&none        &none       &kp LGUI     &lt 1 TAB    &kp SPACE  &none    &none  &lt 5 RET  &lt 2 BSPC
            >;
        };

        num_layer {
            label = "NUM";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //|  !       |  @       |  {       |  }       | "|"      |   |  +       |  7       |  8       |  9       |  *       |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|  #       |  $       |  (       |  )       |  `       |   |  -       |  4       |  5       |  6       |  &       |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|  %       |  ^       |  [       |  ]       |  ~       |   |  =       |  1       |  2       |  3       |  \       |
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      |          |    🔴    |          │   │  .       |  0       |
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&kp EXCL     &kp AT      &kp LBRC  &kp RBRC  &kp PIPE   &none    &none  &kp PLUS   &kp N7  &kp N8  &kp N9  &kp STAR
&kp HASH     &kp DOLLAR  &kp LPAR  &kp RPAR  &kp GRAVE  &none    &none  &kp MINUS  &kp N4  &kp N5  &kp N6  &kp AMPS
&kp PERCENT  &kp CARET   &kp LBKT  &kp RBKT  &kp TILDE  &none    &none  &kp EQUAL  &kp N1  &kp N2  &kp N3  &kp BSLH
&none        &none       &trans    &trans    &trans     &none    &none  &kp DOT    &kp N0
            >;
        };

        func_layer {
            label = "FUNC";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //|   F1     |  F2      |  F3      |  F4      | email    |   | g.pull   |  HOME    |  ▲       |  END     |  PG_UP   |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|   F5     |  F6      |  F7      |  F8      | g.pull_m |   | g.status |   ◄      |  ▼       |  ►       |  PG_DN   |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|   F9     |  F10     |  F11     |  F12     | dealsuit |   | g.diff   | g.commit | g.chkout |  g.add   |  g.push  |
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      |          |          |          |   |          |   🔴     |
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&kp F1  &kp F2   &kp F3   &kp F4   &email            &none    &none  &git_pull    &kp HOME     &kp UP         &kp END    &kp PG_UP
&kp F5  &kp F6   &kp F7   &kp F8   &git_pull_many    &none    &none  &git_status  &kp LEFT     &kp DOWN       &kp RIGHT  &kp PAGE_DOWN
&kp F9  &kp F10  &kp F11  &kp F12  &start_dealsuite  &none    &none  &git_diff    &git_commit  &git_checkout  &git_add   &git_push
&none   &none    &trans   &trans   &trans            &none    &none  &trans       &trans
            >;
        };

        extended_layer {
            label = "EXT";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //|   ᛒ🗙    |          |    ⏮    |    ⏭     |    ⏯     |   |   🔉    |    🔊    |   🔇     |          |    ⏻    |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|          |          |          |    ⚪   |    🔵    |   |   🔅    |    🔆    |  ^ T     |  ^⇧ T    |          |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|   ᛒ1     |   ᛒ2     |   ᛒ3     |   ᛒ4     |   ᛒ5     |   |  alt-◄   |  alt-►   |  ^ Tab   |  ^⇧ Tab  |          |
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      |          |    🔴   |          |   |          |   ⭕     |
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&bt BT_CLR    &trans        &kp C_PREV    &kp C_NEXT    &kp K_PP      &none    &none  &kp C_VOL_DN  &kp C_VOL_UP   &kp C_MUTE       &trans         &kp LC(LA(DEL))
&trans        &trans        &trans        &to MOUSE     &to GAME      &none    &none  &kp C_BRI_DN  &kp C_BRI_UP   &kp LC(T)        &kp LC(LS(T))  &trans
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &none    &none  &kp LA(LEFT)  &kp LA(RIGHT)  &kp LC(RS(TAB))  &kp LC(TAB)    &trans
&none         &none         &trans        &trans        &trans        &none    &none  &trans        &trans
            >;
        };

        game_layer {
            label = "GAME";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //|  Inv     |  Tact.A  |  ▲       |  Hands   |  Reload  |   | Health   |  3       |  4       |   1      |   2      |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|  Sprint  |  ◄       |  ▼       |  ►       |  Ping    |   | Grenade  | CharMove |  X       |          |          |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|  Crouch  |  Ulti.A  |  F1      |  Crouch  |  Melee   |   | FireMode | Look Gun |  Map     |          |    🟢    |
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      |  Grenade |  Jump    | Jump     │   │  ENTER   │  T       |
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&kp TAB    &kp Q  &kp W   &hm X E    &hm N4 R   &none    &none  &kp N4   &kp N3  &kp N2  &kp N1  &none
&kp LSHFT  &kp A  &kp S   &kp D      &hm G F    &none    &none  &kp G    &kp H   &kp X   &none   &none
&kp LCTRL  &kp Z  &kp F1  &kp C      &hm B V    &none    &none  &kp B    &kp N   &kp M   &none   &to BASE
&none      &none  &kp H   &kp SPACE  &kp SPACE  &none    &none  &kp RET  &kp T
            >;
        };

        mouse_layer {
            label = "MOUSE";

            //╭──────────┬──────────┬──────────┬──────────┬──────────╮   ╭──────────┬──────────┬──────────┬──────────┬──────────╮
            //|          |  L.CLK   |  🖯 ▲    |  R.CLK   |  S ▲     |   |          |          |          |          |          |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|          |  🖯 ◄    |  🖯 ▼    |  🖯 ►    |  S ▼     |   |   🖯 5   |          |  S ▲     |          |           |
            //├──────────┼──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┼──────────┼──────────┤
            //|          |          |          |          |          |   |   🖯 4   |  S ◄     |  S ▼     |  S ►     |    🟢    |
            //╰──────────┴──────────┼──────────┼──────────┼──────────┤   ├──────────┼──────────┼──────────┴──────────┴──────────╯
            //                      |          |          |  L.CLK   │   │    🔴    |  M.CLK   |
            //                      ╰──────────┴──────────┴──────────╯   ╰──────────┴──────────╯

            bindings = <
&none  &mkp LCLK       &mmv MOVE_UP    &mkp RCLK        &msc SCRL_UP    &none    &none  &none     &none           &none           &none            &none
&none  &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &msc SCRL_DOWN  &none    &none  &mkp MB5  &none           &msc SCRL_UP    &none            &none
&none  &none           &none           &none            &none           &none    &none  &mkp MB4  &msc SCRL_LEFT  &msc SCRL_DOWN  &msc SCRL_RIGHT  &to BASE
&none  &none           &none           &none            &mkp LCLK       &none    &none  &none     &mkp MCLK
            >;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        Activate_EXT {
            if-layers = <NUM FUNC>;
            then-layer = <EXT>;
        };
    };
};
